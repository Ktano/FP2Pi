class jogada(coordenada):
    
    def cria_jogada(self, coord, valor):
        if not isinstance (coord, coordenada):
            raise ValueError('cria_jogada: argumentos invalidos')
        elif valor not in [1,2]:
            raise ValueError('cria_jogada: argumentos invalidos')
        else:
            self.coord=coord
            self.valor=valor
    
    
    def jogada_coordenada(self):
        return self.coord
    
    def jogada_valor(self):
        return self.valor
    
    def e_jogada(arg):
        return isinstance(arg, jogada)
    
    def jogadas_iguais(self, outro):
        return self.coord==outro.jogada_coordenada() and self.valor==outro.jogada_valor()
    
    def jogada_para_cadeia(self):
        print (coordenada_para_cadeia() + ' --> ' + str(self.valor))
        
